<% if notice.present?%>
<div class="alert alert-success alert-dismissible fade show w-50 p-3 mx-auto" role="alert">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>
<%= javascript_pack_tag "show_task" %>
<%= javascript_pack_tag "task_status_update" %>

<div class="container">
  <!--render sub navigation bar -->
  <%= render 'tasks/sub_nav' %>

  <div id="">
    <div class="row task-width">
      <div class="col-10" id="show-tasks">
        <%= render "tasks/show_tasks" %>
      </div>  
      <div class="col-2 mt-4 text-center p-4 d-none d-lg-block h-100 shadow rounded text-right" id="day-filter">
        <% day = Date.today %>
        <div class=""><%= link_to "Yesterday", filter_task_day_path(filter_day: (day-1) ), remote: true, class:'h4 text-secondary filter-day', onclick: "change_color(this)" %></div>
        <div class="mt-3 pt-3 border-top"><%= link_to "Today", filter_task_day_path(filter_day: (day)), remote: true, class:'h4 text-primary filter-day', onclick: "change_color(this)" %></div>
        <div class="mt-3 pt-3 border-top"><%= link_to "Tomorrow", filter_task_day_path(filter_day: (day+1)), remote: true, class:'h4 text-secondary filter-day', onclick: "change_color(this)" %></div>
        <div class="mt-3 pt-3 border-top"> <%= link_to "Day After Tomorrow", filter_task_day_path(filter_day: 'after_tomorrow'), remote: true, class: 'h4 text-secondary filter-day', onclick: "change_color(this)" %></div>
      </div>
    </div> 
    
    
    <div id="show-edit-tasks">
    </div>
    <div id="show-task-details">
    </div> 
  </div>
  <!-- Task add Modal -->
  <%= render partial: 'tasks/new_task_add_modal' %>
  
</div>
<script>
  var get_all_color = document.getElementById('show-color');
  setCheckColor = (e, get_color) =>{
    e.classList.toggle('bg-dark')
    document.getElementById('select-c').value = get_color;
  }
</script>